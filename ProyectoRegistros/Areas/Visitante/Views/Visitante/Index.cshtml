@model IEnumerable<ProyectoRegistros.Areas.Visitante.Models.ViewModels.TalleresViewModel>

@{
    Layout = "LayoutVisit";
}

<div class="filtros">
    <div class="buscador">
        <input type="search" placeholder="Nombre, edad, día..." />
    </div>


</div>

<div class="tablita">
    <div class="tabla-scroll">
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Días</th>
                    <th>Espacios</th>
                    <th>Horario</th>
                    <th>Edad</th>
                    <th>Profesor</th>
                    <th>Costo</th>
                </tr>

            </thead>

            <tbody>
                @foreach (var taller in Model)
                {
                    <tr>
                        <td>@taller.Nombre</td>
                        <td>@taller.Dias</td>
                        <td>@taller.Espacios</td>
                        <td>@taller.Horario</td>
                        <td>@taller.Edad</td>
                        <td>@taller.Profesor</td>
                        <td>$@taller.Costo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
